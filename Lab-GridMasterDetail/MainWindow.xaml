        <TextBox x:Name="txtRTS" HorizontalAlignment="Left" Height="23" Margin="476,181,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="252"/>
        <TextBox x:Name="txtReview" HorizontalAlignment="Left" Height="96" Margin="476,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="252"/>
        <Label Content="Movie" HorizontalAlignment="Left" Margin="74,80,0,0" VerticalAlignment="Top" Width="97"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="334,116,0,0" VerticalAlignment="Top" Width="67"/>
        <Label Content="Rotten Tomatoes Score" HorizontalAlignment="Left" Margin="334,181,0,0" VerticalAlignment="Top" Width="136"/>
        <Label Content="Review" HorizontalAlignment="Left" Margin="334,254,0,0" VerticalAlignment="Top" Width="67"/>

    </Grid>
</Window>
